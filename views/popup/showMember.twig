<div class="remodal" data-remodal-id="showMemberModal{{loop.index0}}">
  <button data-remodal-action="close" class="remodal-close"></button>
  <h1>{{member.name}} のプロフィール</h1>
  <div class="left">
    <label class="w3-label">れんらくさき</label>
    <input class="w3-input" type="text" disabled="disabled" value="{{member.contact}}">
    <label class="w3-label">あそんでいるげーむ</label>
    <input class="w3-input" type="text" disabled="disabled" value="{{member.playing_games}}">
    <label class="w3-label">じこしょうかい</label>
    <textarea class="w3-input" rows="4" disabled="disabled">{{member.introduction}}</textarea>
  </div>
  <br>
  <button data-remodal-action="cancel" class="remodal-cancel">閉じる</button>
</div>
