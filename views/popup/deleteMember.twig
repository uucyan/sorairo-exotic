<div class="remodal" data-remodal-id="deleteMemberModal{{loop.index0}}">
  <button data-remodal-action="close" class="remodal-close"></button>
  <h1>メンバー削除</h1>
  <p>{{member.name}} を本当に削除しちゃうの…？</p>
  <form class="w3-container" action="deleteAction" method=“post”>
    <input name="name" class="w3-input" type="hidden" value="{{member.id}}">
    <br>
    <button data-remodal-action="cancel" class="remodal-cancel">キャンセル</button>
    <button class="remodal-confirm">削除</button>
  </form>
</div>

<script>
  {# Enterキーでキャンセルボタンが実行されるから仕方なく制御 #}
  $(function(){
    $("input").on("keydown", function(e) {
      if ((e.which && e.which === 13) || (e.keyCode && e.keyCode === 13)) {
        return false;
      } else {
        return true;
      }
    });
  });
</script>
